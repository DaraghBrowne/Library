@model IEnumerable<Library.Models.ItemLibrarianViewModel>
@{
	ViewBag.Title = "BorrowedList";
	Layout = "~/Views/Shared/LibrarianLayout.cshtml";
}
<br />
<div class="row">
	<div class="col-sm-4"></div>
	<div class="col-sm-4"><h2>Books Awaiting Collection</h2></div>
</div>

<div class="mb-3">
	@if (ViewBag.CollectionConfirmed != null)
	{
		<h5><span style="color: lime">Success:</span> @ViewBag.CollectionConfirmed</h5>
	}
</div>

<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">StudentID</th>
			<th scope="col">Book</th>
			<th scope="col">Isbn</th>
			<th scope="col">Book Collected</th>

		</tr>

	</thead>
	<tbody>
		@foreach (var item in Model)
		{

			<tr class="table-secondary">
				<th scope="row"> @item.C.CustName</th>
				<td> @item.It.Name</td>
				<td> @item.It.Isbn</td>
				<td scope="col"><input type="button" value="Confirm Collection" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("BookCollected", "Librarian",  new { isbn = item.It.Isbn })'" /></td>
			</tr>
		}
	</tbody>
</table>